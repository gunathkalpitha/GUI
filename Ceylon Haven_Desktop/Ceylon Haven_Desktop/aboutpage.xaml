<Window x:Class="Ceylon_Haven_Desktop.AboutPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ceylon_Haven_Desktop"
        mc:Ignorable="d"
        Title="About Ceylon Haven" Height="450" Width="800"
        Background="LightGray">
    <Grid>
        <StackPanel>
            <TextBlock Text="About Ceylon Haven" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="10"
                       Foreground="#E74C3C"/>
            <TextBlock Text="Welcome to Ceylon Haven, your home away from home. 
                            We are dedicated to providing a memorable stay with top-notch facilities and exceptional service." 
                       TextWrapping="Wrap" 
                       Margin="10"
                       Foreground="Black"/>
            <TextBlock Text="Facilities" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Margin="10"
                       Foreground="#E74C3C"/>
            <TextBlock Text="• Luxurious rooms and suites
                            • Fine dining restaurants
                            • Swimming pool
                            • Spa and wellness center
                            • Conference rooms and banquet halls" 
                       TextWrapping="Wrap" 
                       Margin="10"
                       Foreground="Black"/>
            <TextBlock Text="Our Mission" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Margin="10"
                       Foreground="#E74C3C"/>
            <TextBlock Text="To provide an unforgettable experience with unparalleled hospitality and comfort." 
                       TextWrapping="Wrap" 
                       Margin="10"
                       Foreground="Black"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Close" 
                        Width="100" 
                        Margin="5" 
                        Background="#E74C3C" 
                        Foreground="White" 
                        Click="CloseButton_Click"/>
                <Button Content="Back to Main Window" 
                        Width="150" 
                        Margin="5" 
                        Background="#E74C3C" 
                        Foreground="White" 
                        Click="BackToMainWindowButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
